Public Sub Form_Open()
  
  txtHorasLunes.Text = "0"
  txtHorasMartes.Text = "0"
  txtHorasMiercoles.Text = "0"
  txtHorasJueves.Text = "0"
  txtHorasViernes.Text = "0"
  txtHorasSabado.Text = "0"
  txtHorasDomingo.Text = "0"
  
  ComboMeses()
  
  txtHorasTotal.Text = CInt(txtHorasLunes.Text) + CInt(txtHorasMartes.Text) + CInt(txtHorasMiercoles.Text) + CInt(txtHorasJueves.Text) + CInt(txtHorasViernes.Text) + CInt(txtHorasSabado.Text) + CInt(txtHorasDomingo.Text)
  
End

