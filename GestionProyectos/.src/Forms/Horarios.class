Public Sub txtHorasLunes_Change()
  
  txtHorasTotal.Text = Recalcular()
  
End

Public Function Recalcular() As String
  
  Dim resultado As String
  
  resultado = txtHorasLunes.Text + txtHorasMartes.Text
  Return CStr(resultado)
  
End
